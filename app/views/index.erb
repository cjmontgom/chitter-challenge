<!DOCTYPE html>
<html >
  <head>

  </head>
  <body>


    <form action="/peeps" method="post">
      <input type="text" name="peep_entry" placeholder="Enter peep here." autocomplete="off" >
      <input type="submit" value="Post" >
    </form>

    <h2> Feed: </h2>

    <div id="print-peeps" >
      <%  @peeps.each do |peep| %>
      <div id="body">
      <%= peep.body             %>
      </div>
      <div id="date-and-time">
      <%= peep.date_and_time    %>
      <br><br>
      </div>
      <%  end                   %>
    </div>


  </body>
</html>
